<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="#ffffff"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="@string/activity_custom_dialog_permission_TextView1"
        android:textColor="#000000"
        android:textSize="22sp"
        android:typeface="normal"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:alpha="0.6"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/activity_custom_dialog_permission_TextView2"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="@dimen/step_Image_View_Margin_Bottom_Top"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_custom_dialog_permission_TextView3_Margin_Left"
            android:visibility="invisible"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/see_More_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:stateListAnimator="@null"
            android:paddingBottom="0dp"
            android:text="@string/see_More_Button"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/continue_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="@string/continue_Button"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</LinearLayout>